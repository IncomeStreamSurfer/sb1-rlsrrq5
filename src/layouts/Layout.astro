---
const { title, crumbs } = Astro.props;
import Breadcrumbs from '../components/Breadcrumbs.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="google-site-verification" content="c1Vt5HIYhSmjFT-aJ3LKNslnJJDCRe_tGqX7DU8fuaA" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans bg-gray-50">
    <header class="bg-gray-900 text-white p-4 shadow-md">
      <nav class="container mx-auto flex flex-col md:flex-row justify-between items-center">
        <a href="/" class="text-3xl font-serif font-bold mb-4 md:mb-0">The Classic Menswear Chronicle</a>
        <ul class="flex flex-wrap justify-center space-x-4">
          <li><a href="/" class="hover:text-gray-300 transition duration-300">Home</a></li>
          <li><a href="/about" class="hover:text-gray-300 transition duration-300">About</a></li>
          <li><a href="/blog" class="hover:text-gray-300 transition duration-300">Blog</a></li>
          <li><a href="/guides" class="hover:text-gray-300 transition duration-300">Style Guides</a></li>
          <li><a href="/sizing-charts" class="hover:text-gray-300 transition duration-300">Sizing Charts</a></li>
          <li><a href="/glossary" class="hover:text-gray-300 transition duration-300">Glossary</a></li>
          <li><a href="/events-calendar" class="hover:text-gray-300 transition duration-300">Events Calendar</a></li>
        </ul>
      </nav>
    </header>
    <main class="container mx-auto p-4">
      {crumbs && <Breadcrumbs crumbs={crumbs} />}
      <slot />
    </main>
    <footer class="bg-gray-900 text-white p-4 mt-8">
      <div class="container mx-auto text-center">
        <p>&copy; 2024 The Classic Menswear Chronicle. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>