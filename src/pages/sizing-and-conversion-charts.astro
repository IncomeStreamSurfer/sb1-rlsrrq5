---
import Layout from '../layouts/Layout.astro';
import SizeConversionChart from '../components/SizeConversionChart.astro';
import ShirtSizeChart from '../components/ShirtSizeChart.astro';
import ShoeSizeChart from '../components/ShoeSizeChart.astro';
import BeltSizeChart from '../components/BeltSizeChart.astro';
import GloveSizeChart from '../components/GloveSizeChart.astro';
import HatSizeChart from '../components/HatSizeChart.astro';
import NeckSizeChart from '../components/NeckSizeChart.astro';
import WaistSizeChart from '../components/WaistSizeChart.astro';
import InseamLengthChart from '../components/InseamLengthChart.astro';
import ChestSizeChart from '../components/ChestSizeChart.astro';
import SleeveLengthChart from '../components/SleeveLengthChart.astro';

---

<Layout title="Sizing and Conversion Charts - The Classic Menswear Chronicle">
  <h1 class="text-4xl font-bold mb-8">Sizing and Conversion Charts</h1>
  <p class="mb-8">Use these charts to find the right size for various menswear items. Remember, these are general guidelines, and for the best fit, we recommend getting measured by a professional tailor.</p>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Suit Size Conversion Chart</h2>
    <SizeConversionChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Shirt Size Chart</h2>
    <ShirtSizeChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Shoe Size Conversion Chart</h2>
    <ShoeSizeChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Belt Size Chart</h2>
    <BeltSizeChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Glove Size Chart</h2>
    <GloveSizeChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Hat Size Conversion Chart</h2>
    <HatSizeChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Neck Size Chart</h2>
    <NeckSizeChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Waist Size Chart</h2>
    <WaistSizeChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Inseam Length Chart</h2>
    <InseamLengthChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Chest Size Chart</h2>
    <ChestSizeChart />
  </section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-4">Sleeve Length Chart</h2>
    <SleeveLengthChart />
  </section>

</Layout>